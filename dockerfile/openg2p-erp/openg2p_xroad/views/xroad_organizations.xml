<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="xroad_organizations_form_view">
            <field name="name">xroad.organizations.form</field>
            <field name="model">xroad.organizations</field>
            <field name="arch" type="xml">
                <form string="Organizations" create="0" edit="0" delete="0" import="0">
                    <sheet>
                        <group>
                            <group>
                            <field name="xroad_config_name"/>
                            <field name="date_now"/>
                            <field name="date_before"/>
                            <field name="page_size"/>
                            <field name="status"/>
                            </group>
                            <group>
                                <button string="Get Organizations" name="get_organizations" type="object"/>
                            </group>
                            <group>
                                <field name="organization_details"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>