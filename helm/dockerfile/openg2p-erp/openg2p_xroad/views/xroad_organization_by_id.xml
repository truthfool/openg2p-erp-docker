<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="xroad_organization_id_form_view">
            <field name="name">xroad.organization.id.form</field>
            <field name="model">xroad.organization.id</field>
            <field name="arch" type="xml">
                <form string="Organizations by ID" create="0" edit="0" delete="0" import="0">
                    <sheet>
                        <group>
                            <field name="xroad_config_name"/>
                            <field name="organization_id"/>
                            <field name="showheader"/>
                            <button string="Get Organization Details" name="get_organization_by_id" type="object"
                                class="oe_highlight"/>
                        </group>
                        <group>
                            <field name="organization_details"/>
                        </group>
                        <table>
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Name</th>
                                    <th>RoleType</th>
                                </tr>
                                <tr>
                                    <td>Municipality</td>
                                    <td>Puolangan kunta</td>
                                    <td>Producer</td>
                                </tr><tr>
                                    <td>Municipality</td>
                                    <td>Maaseutupalvelut</td>
                                    <td>Producer</td>
                                </tr>
                                <tr>
                                    <td>Municipality</td>
                                    <td>Puolangan kirjasto</td>
                                    <td>Producer</td>
                                </tr>
                                <tr>
                                    <td>Municipality</td>
                                    <td>Maaseutupalvelut</td>
                                    <td>Producer</td>
                                </tr>
                            </thead>
                        </table>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>