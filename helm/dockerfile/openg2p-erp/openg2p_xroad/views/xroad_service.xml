<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="xroad_organizations_form_view">
            <field name="name">xroad.service.form</field>
            <field name="model">xroad.service</field>
            <field name="arch" type="xml">
                <form string="Services Available" create="0" edit="0" delete="0" import="0">
                    <sheet>
                        <group>
                            <field name="xroad_config_name"/>
                            <field name="date_now"/>
                            <field name="date_before"/>
                            <field name="page_size"/>
                            <field name="status"/>
                        </group>
                            <button string="Get Services" name="get_services" type="object"
                                class="oe_highlight"/>
                        <group>
                            <field name="service_details"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>