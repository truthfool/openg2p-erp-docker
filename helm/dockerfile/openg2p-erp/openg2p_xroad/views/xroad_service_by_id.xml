<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="xroad_organizations_form_view">
            <field name="name">xroad.service.id.form</field>
            <field name="model">xroad.service.id</field>
            <field name="arch" type="xml">
                <form string="Services by ID" create="0" edit="0" delete="0" import="0">
                    <sheet>
                        <group>
                            <field name="xroad_config_name"/>
                            <field name="show_header"/>
                            <button string="Get Service Details" name="get_service_by_id" type="object"
                                class="oe_highlight"/>
                        </group>
                        <group>
                            <field name="service_details"/>
                        </group>
                        <table>
                            <thead>
                                <tr>
                                    <th>Area Type</th>
                                    <th>Name</th>
                                    <th>TargetGroups</th>
                                    <th>FundingType</th>
                                    <th>ServiceVouchersInUse</th>
                                </tr>
                                <tr>
                                    <td>Municipality</td>
                                    <td>Varhaiskasvatus kunnallisessa päiväkodissa</td>
                                    <td>Children and families with children</td>
                                    <td>Publicly Funded</td>
                                    <td>True</td>
                                </tr>
                            </thead>
                        </table>
                        <table>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Groups</th>
                                    <th>Amount</th>
                                </tr>
                                <tr>
                                    <td>Benefit Voucher</td>
                                    <td>Children and families with children</td>
                                    <td>100.0</td>
                                </tr>
                            </thead>
                        </table>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>