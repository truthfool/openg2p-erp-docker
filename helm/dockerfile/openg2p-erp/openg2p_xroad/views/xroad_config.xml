<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="openg2p_xroad_config_view">
            <field name="name">xroad.config.form</field>
            <field name="model">xroad.config</field>
            <field name="arch" type="xml">
                <form string="Create X-Road Configuration" import="0">
                    <sheet>
                        <group>
                            <field name="server_name"/>
                            <field name="xroad_username"/>
                            <field name="xroad_password"/>
                            <field name="url"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="openg2p_xroad_tree_view">
            <field name="name">xroad.config.tree</field>
            <field name="model">xroad.config</field>
            <field name="arch" type="xml">
                <tree edit="0" import="0">
                    <field name="server_name"/>
                    <field name="url"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>