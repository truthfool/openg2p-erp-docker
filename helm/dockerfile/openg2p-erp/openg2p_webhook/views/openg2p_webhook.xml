<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="openg2p_webhook_form_view">
            <field name="name">openg2p.webhook.form</field>
            <field name="model">openg2p.webhook</field>
            <field name="arch" type="xml">
                <form string="Create webhook" import="0">
                    <sheet>
                        <group>
                            <field name="events" string="Events" widget="many2many_tags"/>
                            <field name="webhook_url" string="URL"/>
                            <field name="type_data"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="openg2p_webhook_tree_view">
            <field name="name">openg2p.webhook.tree</field>
            <field name="model">openg2p.webhook</field>
            <field name="arch" type="xml">
                <tree edit="0" import="0">
                    <field name="events"/>
                    <field name="webhook_url"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>